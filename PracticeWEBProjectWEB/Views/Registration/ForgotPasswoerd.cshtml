@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <!-- Wrapper to center form -->
    <div class="wrapper">
        <!-- Forgot Password Form -->
        <div class="form-wrapper forgot-password">
            <form action="@Url.Action("ForgotPasswoerd", "Registration")" method="post">
                <h2>Forgot Password</h2>

                <!-- Email Input -->
                <div class="input-group">
                    <input type="email" name="Email" required />
                    <label for="Email">Enter your registered email</label>
                </div>

                <!-- Submit Button -->
                <button type="submit">Send Reset Link</button>

                <!-- Back to Login Link -->
                <div class="back-to-login-link">
                    <p>Remembered your password? <a href="@Url.Action("Login", "Registration")">Back to Login</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
